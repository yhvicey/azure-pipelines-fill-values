{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "semicolon": true,
        "space-before-function-paren": [true, {
            "anonymous": "never",
        }]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}