{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "out",
    "types": [
      "node",
      "mocha"
    ],
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }]
  },
  "include": [
    "src/**/*.*",
    "tests/**/*.*"
  ],
  "exclude": [
    "node_modules",
    "out/**/*.*"
  ]
}